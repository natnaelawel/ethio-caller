<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".BalanceTransferFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



    <TextView
        android:id="@+id/transferHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Transfer Balance"
        android:textStyle="bold|italic"
        android:textColor="@android:color/holo_blue_dark"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"/>
    <android.support.design.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:weightSum="9"
            android:padding="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Phone"
                android:layout_weight="1"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="17dp" />


            <android.support.design.widget.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:layout_gravity="center">
                <EditText
                    android:id="@+id/rechargeToPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:layout_gravity="center_horizontal"
                    android:singleLine="true"
                    android:hint="phone number"
                    android:textSize="20dp" />

            </android.support.design.widget.TextInputLayout>

            <ImageView
                android:id="@+id/addContacttoEditText"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical|end"
                android:src="@drawable/ic_add_contact"
                android:elevation="10dp"
                />
        </LinearLayout>

    </android.support.design.card.MaterialCardView>
    <android.support.design.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="10dp"
        app:cardElevation="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:weightSum="9"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Amount"
                android:layout_weight="1"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="17dp" />


            <android.support.design.widget.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="6">

                <EditText
                    android:id="@+id/tranferAmountEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:hint="Transfer Amount"
                    android:singleLine="true"
                    android:inputType="number"
                    android:textSize="20dp" />


            </android.support.design.widget.TextInputLayout>


        </LinearLayout>

    </android.support.design.card.MaterialCardView>


    <Button
        android:id="@+id/transferbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/magenta"
        android:layout_marginTop="20dp"
        android:elevation="10dp"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Transfer"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="bold|italic" />

    </LinearLayout>
</FrameLayout>